import {SelectScreen} from "./selectscreen.slint";
import {MoreSelectScreen} from "./moreselectscreen.slint";
import {BluetoothScreen} from "./bluetoothscreen.slint";
import {ActiveScreen, Screens} from "./common.slint";

// TODO different pages - See https://slint-ui.com/releases/0.2.1/editor/?load_url=https://raw.githubusercontent.com/slint-ui/slint/master/examples/printerdemo/ui/printerdemo.slint

export AppWindow := Window { 
    title: "Modular Audio";
    // width: 800px;
    // height: 480px;

    // width: 480px;
    // height: 320px;

    width: 1024px;
    height: 600px;

    background: black;
    callback select_source();
    callback select_screen();

    SelectScreen {
        visible : ActiveScreen.id == Screens.select-source;  
        opacity: ActiveScreen.id == Screens.select-source ? 1. : 0.;
        animate opacity {  duration: 500ms;}
    }

    MoreSelectScreen {
        visible: ActiveScreen.id == Screens.more-select-source ;
        opacity: ActiveScreen.id == Screens.more-select-source ? 1. : 0.;
        animate opacity {  duration: 500ms;}
    }

    BluetoothScreen {  
        visible: ActiveScreen.id == Screens.bluetooth ;
        opacity: ActiveScreen.id == Screens.bluetooth ? 1. : 0.;
        animate opacity {  duration: 500ms;}
    } 

    

}
    
